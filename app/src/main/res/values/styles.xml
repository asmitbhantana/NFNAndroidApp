<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemSelected">@color/textColorWhite</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/colorPrimary</item>-->
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
<!--        <item name="colorAccent">@color/colorAccent</item>-->

<!--        <item name="colorNavigationItem">@color/menu_item_color_state</item>-->
<!--        <item name="colorNavigationItemSelected">@color/textColorWhite</item>-->
<!--        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>-->
                <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="FabIconTheme" parent="Widget.MaterialComponents.FloatingActionButton">

    </style>
    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/textColorWhite</item>
    </style>
    <style name="actionbar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:textColorSecondary">@color/textColorWhite</item>
        <item name="android:textColorPrimary">@color/textColorWhite</item>
    </style>


    <style name="ProgressBarTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

    <style name="dark_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <style name="light_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColorWhite</item>
    </style>

    <style name="link_text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dark_input_label" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">@dimen/signin_card_input_label</item>
    </style>

    <style name="user_input_field">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/input_field_background</item>
        <item name="android:layout_margin">8dp</item>

    </style>

    <style name="sign_in_social_card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
    </style>


    <style name="container_card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/container_card_background</item>
    </style>

    <style name="simple_card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/textColorWhite</item>
    </style>

    <style name="circular_pp_image_card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">100dp</item>
        <item name="cardElevation">10dp</item>
    </style>

    <style name="toolbar_heading_styles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="welcome_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">49dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">#673AB7</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="name_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">#020202</item>
        <item name="android:textSize">25sp</item>
    </style>
</resources>